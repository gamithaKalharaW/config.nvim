# Root EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# Go files
[*.go]
indent_style = tab
tab_width = 4

# JSON and TOML files
[*.{json,toml}]
indent_style = space
indent_size = 2

# Lua files
[*.lua]
indent_style = space
indent_size = 2

# Markdown and text files
[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
